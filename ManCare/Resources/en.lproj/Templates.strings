"templates.routine.koreanGlassSkin.title" = "Korean Glass Skin";
"templates.routine.koreanGlassSkin.description" = "Achieve that coveted dewy, glass-like complexion with this comprehensive Korean skincare routine.";
"templates.routine.koreanGlassSkin.duration" = "15-20 min";

/* Tags */
"templates.routine.koreanGlassSkin.tag1" = "Hydration";
"templates.routine.koreanGlassSkin.tag2" = "Glow";
"templates.routine.koreanGlassSkin.tag3" = "Multi-step";
"templates.routine.koreanGlassSkin.tag4" = "Popular";

/* Benefits */
"templates.routine.koreanGlassSkin.benefit1" = "Deep hydration";
"templates.routine.koreanGlassSkin.benefit2" = "Improved skin texture";
"templates.routine.koreanGlassSkin.benefit3" = "Radiant glow";
"templates.routine.koreanGlassSkin.benefit4" = "Reduced fine lines";

/* Morning Steps */
"templates.routine.koreanGlassSkin.morning.step1.title" = "Water-based Cleanser";
"templates.routine.koreanGlassSkin.morning.step1.why" = "Removes overnight sebum and impurities without stripping skin's natural moisture barrier, preparing it for optimal product absorption";
"templates.routine.koreanGlassSkin.morning.step1.how" = "Wet your face with lukewarm water. Apply a small amount and gently massage in circular motions for 30-60 seconds. Rinse thoroughly and pat dry with a clean towel.";

"templates.routine.koreanGlassSkin.morning.step2.title" = "Toner";
"templates.routine.koreanGlassSkin.morning.step2.why" = "Balances skin's pH level after cleansing and creates the perfect environment for subsequent products to penetrate deeply";
"templates.routine.koreanGlassSkin.morning.step2.how" = "Pour toner onto your palms or a cotton pad. Gently pat or sweep across your face and neck, avoiding the eye area. Let it absorb for 30 seconds.";

"templates.routine.koreanGlassSkin.morning.step3.title" = "Essence";
"templates.routine.koreanGlassSkin.morning.step3.why" = "Delivers the first layer of lightweight hydration and preps skin for better absorption of serums and treatments";
"templates.routine.koreanGlassSkin.morning.step3.how" = "Pour a few drops into your palms. Gently pat into skin from the center of your face moving outward. Press lightly to help absorption.";

"templates.routine.koreanGlassSkin.morning.step4.title" = "Serum";
"templates.routine.koreanGlassSkin.morning.step4.why" = "Provides concentrated active ingredients targeting specific concerns like brightening, anti-aging, or hydration";
"templates.routine.koreanGlassSkin.morning.step4.how" = "Apply 2-3 drops to your face and neck. Gently press and pat the serum in, avoiding tugging. Wait 60 seconds before next step.";

"templates.routine.koreanGlassSkin.morning.step5.title" = "Moisturizer";
"templates.routine.koreanGlassSkin.morning.step5.why" = "Seals in all previous layers of hydration and creates a protective barrier to prevent transepidermal water loss";
"templates.routine.koreanGlassSkin.morning.step5.how" = "Warm a dime-sized amount between your palms. Apply using gentle upward and outward motions on face and neck. Don't forget your neck!";

"templates.routine.koreanGlassSkin.morning.step6.title" = "Sunscreen";
"templates.routine.koreanGlassSkin.morning.step6.why" = "Protects skin from UV damage that causes 90% of visible aging, dark spots, and texture issues";
"templates.routine.koreanGlassSkin.morning.step6.how" = "Apply two finger-lengths of sunscreen to all exposed areas. Wait 15 minutes before sun exposure. Reapply every 2 hours when outdoors.";

/* Evening Steps */
"templates.routine.koreanGlassSkin.evening.step1.title" = "Oil Cleanser";
"templates.routine.koreanGlassSkin.evening.step1.why" = "Dissolves makeup, sunscreen, and oil-based impurities that water-based cleansers can't remove effectively";
"templates.routine.koreanGlassSkin.evening.step1.how" = "Apply to dry skin and massage for 1-2 minutes. Add water to emulsify into a milky texture, then rinse thoroughly with lukewarm water.";

"templates.routine.koreanGlassSkin.evening.step2.title" = "Water-based Cleanser";
"templates.routine.koreanGlassSkin.evening.step2.why" = "Second cleanse removes remaining water-based debris and ensures completely clean skin for maximum treatment absorption";
"templates.routine.koreanGlassSkin.evening.step2.how" = "Apply to damp skin and massage gently in circular motions for 60 seconds. Rinse thoroughly with lukewarm water and pat dry.";

"templates.routine.koreanGlassSkin.evening.step3.title" = "Exfoliant";
"templates.routine.koreanGlassSkin.evening.step3.why" = "Gently removes dead skin cells that can cause dullness and clog pores, revealing brighter, smoother skin underneath";
"templates.routine.koreanGlassSkin.evening.step3.how" = "Apply to clean, dry skin avoiding the eye area. Leave on for 10-15 minutes, then rinse. Use 2-3 times per week, not daily.";

"templates.routine.koreanGlassSkin.evening.step4.title" = "Sheet Mask";
"templates.routine.koreanGlassSkin.evening.step4.why" = "Provides intensive hydration and nutrients in a concentrated treatment that penetrates deeply for maximum glow";
"templates.routine.koreanGlassSkin.evening.step4.how" = "Apply mask to clean face, smoothing out air bubbles. Relax for 15-20 minutes. Remove and pat in remaining essence. Use 2-3x per week.";

"templates.routine.koreanGlassSkin.evening.step5.title" = "Eye Cream";
"templates.routine.koreanGlassSkin.evening.step5.why" = "Targets the delicate eye area with specialized ingredients to reduce puffiness, dark circles, and fine lines";
"templates.routine.koreanGlassSkin.evening.step5.how" = "Gently dab a rice grain-sized amount around the orbital bone using your ring finger. Pat from inner to outer corner. Never pull or tug.";

"templates.routine.koreanGlassSkin.evening.step6.title" = "Moisturizer";
"templates.routine.koreanGlassSkin.evening.step6.why" = "Locks in all the layered treatments and provides overnight hydration while your skin is in repair mode";
"templates.routine.koreanGlassSkin.evening.step6.how" = "Apply a generous amount using upward and outward motions. Your evening moisturizer can be richer than your morning one.";

/* ===================================
